@model SupplierVM
@{ ViewData["Title"] = "Supplier section"; }
<h1 class="h3 mb-2 text-gray-800">

    @if (Model.ID > 0)
    {
        <span> Edit supplier infomation  </span> }
    else
    {
        <span> Create a new supplier</span>
    }
</h1>

@using (Html.BeginForm("Create", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))
{


    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.Logo)

    <div class="row">
        <div class="col-10 ">
        <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Submit</button>
            <a href="/admin/supplier/index" class="btn btn-info"><i class="fas fa-angle-double-left"></i> Back to list</a>
        </div>
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "validate" })
        </div>
        <div class="form-group">
            <label>Logo</label>
            <input name="Logo" type="file" class="py-2" />

            @if (!string.IsNullOrEmpty(Model.Logo))
            {
                <div class="text-center">
                    <img height="50px" src="~/Image/Suppliers/@Model.Logo" />
                </div>
            }
        </div>
        <div class="form-group">
            <label>Embedded Link</label>
            @Html.TextBoxFor(m => m.LinkTo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LinkTo, null, new { @class = "validate" })
        </div>
    </div>
    </div>
}
