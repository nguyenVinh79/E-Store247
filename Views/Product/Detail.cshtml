@model ProductViewModel

@{
    ViewData["Title"] = "Detail";
}

<section class="section-content bg-white padding-y">
    <div class="container">

        <!-- ============================ ITEM DETAIL ======================== -->
        <div class="row">
            <aside class="col-md-6">
                <div class="card">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="#"><img src="images/items/15.jpg"></a></div>
                        </div> <!-- slider-product.// -->
                        <div class="thumbs-wrap">
                            @foreach (var item in Model.ImageList)
                            {
                                <a href="#" class="item-thumb"> <img src="/Image/Products/Detail/@item.ImagePath"></a>

                            }

                        </div> <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </div> <!-- card.// -->
            </aside>
            <main class="col-md-6">
                <article class="product-info-aside">

                    <h2 class="title mt-3">@Model.ProductInfo.ProductName</h2>

                    <div class="rating-wrap my-3">
                        <ul class="rating-stars">
                            <li style="width:80%" class="stars-active">
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                            <li>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                        </ul>
                        <small class="label-rating text-muted">132 reviews</small>
                        <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> 154 orders </small>
                    </div> <!-- rating-wrap.// -->



                    <table class="table table-striped">
                        <thead class="tb_price">
                            <tr>
                                <th>Màu</th>
                                <th>Giá </th>
                                <th>Tình trạng</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.PropertyList)
                            {
                                <tr>

                                    <td>@item.NameColor</td>
                                    <td> @item.UnitPriceNew </td>
                                    <td>
                                        @if (item.Quantity > 0)
                                        {
                                            <span>Available </span>

                                        }
                                        else
                                        {
                                            <span>Out of stock</span>

                                        }
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>


                    <form id="myFormsizeChoose" novalidate="novalidate">
                        @{
                            int index = 0;
                        }
                        @foreach (var item in Model.PropertyList)
                        {
                            index++;
                            var IsAvailable = "false";
                            if (item.Quantity > 0)
                            {
                                IsAvailable = "true";
                            }

                            if (index == 1)
                            {
                                <text>
                                    <label class="pdsa-radiobutton btn btn-default">
                                        <input title="@item.UnitPriceNew" type="radio" checked data-hethang="@IsAvailable" name="sizeChoose" value="@item.Id">
                                        @item.NameColor @*-  @item.NameSize*@
                                    </label>
                                </text>

                            }
                            else
                            {
                                <text>
                                    <label class="pdsa-radiobutton btn btn-default">
                                        <input title="@item.UnitPriceNew" type="radio" data-hethang="@IsAvailable" name="sizeChoose" value="@item.Id">
                                        @item.NameColor @*-  @item.NameSize*@
                                    </label>
                                </text>

                            }


                        }


                    </form>

                    @{
                        var DisplayPrice = Model.PropertyList.First();

                    }


                    <div class="mb-3">
                        <var class="price h4">@DisplayPrice.UnitPriceNew</var>
                        <span class="text-muted">@DisplayPrice.UnitPrice</span>
                    </div> <!-- price-detail-wrap .// -->

                    <p>
                        Short descriptions in here.
                    </p>


                    <dl class="row">
                        <dt class="col-sm-3">Manufacturer</dt>
                        <dd class="col-sm-9">
                                @if (!string.IsNullOrEmpty(Model.ProductInfo.SupplierName))
                                {
                                    <a href="#"> @Model.ProductInfo.SupplierName </a>
                                }
                                else
                                {
                                    <text>Updating</text>
                                }
                        </dd>

                        @*<dt class="col-sm-3">Article number</dt>
                            <dd class="col-sm-9">596 065</dd>*@

                        <dt class="col-sm-3">Guarantee</dt>
                        <dd class="col-sm-9">2 year</dd>

                        <dt class="col-sm-3">Delivery time</dt>
                        <dd class="col-sm-9">3-4 days</dd>

                        <dt class="col-sm-3">Availabilty</dt>
                        <dd class="col-sm-9">in Stock</dd>
                    </dl>

                    <div class="form-row  mt-4">
                        <div class="form-group col-md flex-grow-0">
                            <div class="input-group mb-3 input-spinner">
                                <div class="input-group-prepend">
                                    <button class="btn btn-light" type="button" id="button-plus"> + </button>
                                </div>
                                <input type="text" class="form-control" value="1">
                                <div class="input-group-append">
                                    <button class="btn btn-light" type="button" id="button-minus"> − </button>
                                </div>
                            </div>
                        </div> <!-- col.// -->
                        <div class="form-group col-md">
                            <a href="#" class="btn  btn-primary">
                                <i class="fas fa-shopping-cart"></i> <span class="text">Add to cart</span>
                            </a>
                            <a href="#" class="btn btn-light">
                                <i class="fas fa-envelope"></i> <span class="text">Contact supplier</span>
                            </a>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->

                </article> <!-- product-info-aside .// -->
            </main> <!-- col.// -->
        </div> <!-- row.// -->
        <!-- ================ ITEM DETAIL END .// ================= -->


    </div> <!-- container .//  -->
</section>

