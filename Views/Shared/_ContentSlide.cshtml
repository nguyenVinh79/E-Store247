@{
    var lstSlider = (List<Banner>)ViewBag.Slider;
    var lstCategory = (List<Category>)ViewBag.Categories;

}
<section class="section-main bg padding-y">
    <div class="container">

        <div class="row">
            <aside class="col-md-3">
                <nav class="card">
                    <ul class="menu-category">
                        @foreach (var item in lstCategory.Where(x => x.ParentCategoryID == 0).ToList())
                        {

                            var lstCateChild = lstCategory.Where(x => x.ParentCategoryID == item.ID).ToList();

                            if (lstCateChild != null && lstCateChild.Count > 0)
                            {
                                <li class="has-submenu">
                                    <a href="/c-@Shop.Common.HelperSEO.ToSeoUrl(item.CategoryName)-@item.ID">@item.CategoryName</a>
                                    <ul class="submenu">
                                        @foreach (var itemChild in lstCateChild)
                                        {
                                            <li><a href="/c-@Shop.Common.HelperSEO.ToSeoUrl(itemChild.CategoryName)-@itemChild.ID">@itemChild.CategoryName</a></li>

                                        }

                                    </ul>
                                </li>

                            }
                            else
                            {
                                <li><a href="/c-@Shop.Common.HelperSEO.ToSeoUrl(item.CategoryName)-@item.ID">@item.CategoryName</a></li>

                            }

                        }
