            <ul class="submenu">
                <li><a href="#">Submenu name</a></li>
                <li><a href="#">Great submenu</a></li>
                <li><a href="#">Another menu</a></li>
                <li><a href="#">Some others</a></li>
            </ul>
        </li>*@
                    </ul>
                </nav>
            </aside> <!-- col.// -->


            <div class="col-md-9">

                <div class="fotorama">

                    @foreach (var item in lstSlider)
                    {
                        <a href="@item.LinkTo">
                            <img src="~/Image/Sliders/@item.ImagePath" />

                        </a>
                    }

                </div>



            </div> <!-- col.// -->



        </div> <!-- row.// -->
    </div> <!-- container //  -->
</section>
